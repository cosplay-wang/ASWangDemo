<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="as.founder.demo.wang.activity.MediaRecorderActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/start_record_sound"
        android:gravity="center"
        android:text="开始录制音频"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/start_record_sound"
        android:id="@+id/end_record_sound"
        android:gravity="center"
        android:text="结束录制音频"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/end_record_sound"
        android:id="@+id/play_record_sound"
        android:gravity="center"
        android:text="播放刚才录制的音频"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/play_record_sound"
        android:id="@+id/pause_record_sound"
        android:gravity="center"
        android:text="暂停"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/start_record_video"
        android:layout_below="@id/pause_record_sound"
        android:gravity="center"
        android:text="跳转录制视频"/>


</RelativeLayout>
