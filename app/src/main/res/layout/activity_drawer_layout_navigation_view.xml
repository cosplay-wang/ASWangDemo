<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawer_layout_navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="as.founder.demo.wang.activity.DrawerLayoutNavigationViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b"
        android:layout_marginStart="49dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:id="@+id/textView2" />


    </LinearLayout>
    <LinearLayout
        android:background="#789456"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="36dp"
            android:gravity="center"

            android:id="@+id/textView1" />
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="36dp"
            android:gravity="center"

            android:id="@+id/textView5" />
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="36dp"
            android:gravity="center"

            android:id="@+id/textView3" />
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="36dp"
            android:gravity="center"

            android:id="@+id/textView4" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#889452"
        android:orientation="vertical">
    <android.support.design.widget.NavigationView

        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:menu ="@menu/navigationitem"
        android:id="@+id/navigation_view"

        ></android.support.design.widget.NavigationView>
        <android.support.design.widget.NavigationView
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:menu ="@menu/navigationitem"
            android:id="@+id/navigation_view2"

            ></android.support.design.widget.NavigationView>
    </LinearLayout>
    <!-- app:headerLayout="@layout/navigation_header_layout"-->
</android.support.v4.widget.DrawerLayout>
